{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,

    // NestJS decorators
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    // Path aliases
    "baseUrl": ".",
    "paths": {
      "@app/utils/*": ["utils/src/*"],
      "@app/utils": ["utils/src/index.ts"],
      "@app/nest/*": ["nest/src/*"],
      "@app/env": ["env/src/index.ts"],
      "@app/env/*": ["env/src/*"],
      "@app/features/*": ["features/*"],
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
